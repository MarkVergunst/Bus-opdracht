<GridPane alignment="center" hgap="10.0" prefHeight="550.0" prefWidth="800.0" style="-fx-background-color: #3b444b;" vgap="10" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mark.bus.Controllers.Controller">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
   <children>
   
       <Label text="Email:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1" />
   
       <TextField fx:id="pwEmail" stylesheets="@../css/styles.css" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
       <Label text="Old password:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="2" />
   
       <PasswordField fx:id="pwOld" prefHeight="25.0" prefWidth="234.0" stylesheets="@../css/styles.css" GridPane.columnIndex="1" GridPane.rowIndex="2" />
       <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
          <children>
              <Button defaultButton="true" onAction="#handleChangePassword" prefHeight="25.0" prefWidth="130.0" stylesheets="@../css/buttons.css" text="Change Password" />
          </children>
       </HBox>
      <PasswordField fx:id="pwNew" prefHeight="25.0" prefWidth="234.0" stylesheets="@../css/styles.css" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <PasswordField fx:id="pwConfirm" prefHeight="25.0" prefWidth="234.0" stylesheets="@../css/styles.css" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Label text="New password:" textFill="WHITE" GridPane.rowIndex="3" />
      <Label text="Confirm password:" textFill="WHITE" GridPane.rowIndex="4" />
      <Button defaultButton="true" onAction="#toLoginPage" prefHeight="25.0" prefWidth="140.0" stylesheets="@../css/buttons.css" text="Back" GridPane.rowIndex="5" />
   </children>
   <columnConstraints>
      <ColumnConstraints maxWidth="134.0" minWidth="46.0" prefWidth="130.0" />
      <ColumnConstraints maxWidth="318.0" minWidth="230.0" prefWidth="234.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
