<GridPane fx:id="root" alignment="center" hgap="10.0" prefHeight="550.0" prefWidth="800.0" style="-fx-background-color: #3b444b;" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mark.bus.Controllers.Controller">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
   <children>
   
       <Label text="Email:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1" />
   
       <TextField fx:id="usernameField" stylesheets="@../css/styles.css" text="markvergunst@gmail.com" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
       <Label text="Password:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="2" />
   
       <PasswordField fx:id="passwordLogin" prefHeight="25.0" prefWidth="234.0" stylesheets="@../css/styles.css" text="Admin123!" GridPane.columnIndex="1" GridPane.rowIndex="2" />
       <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
          <children>
              <Button defaultButton="true" onAction="#handleSubmitButtonAction" prefHeight="25.0" prefWidth="81.0" stylesheets="@../css/buttons.css" text="Sign In" />
          </children>
       </HBox>
   
       <Text fx:id="txtfield" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <Button mnemonicParsing="false" onAction="#handleRegisterButtonAction" prefHeight="25.0" prefWidth="65.0" stylesheets="@../css/buttons.css" text="Sign up" GridPane.rowIndex="4" />
      <HBox alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="6">
         <children>
            <Button mnemonicParsing="false" onAction="#ToPasswordChangeView" prefHeight="25.0" prefWidth="131.0" stylesheets="@../css/buttons.css" text="Change Password" />
         </children>
      </HBox>
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
